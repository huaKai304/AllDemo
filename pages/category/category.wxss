/* pages/category/index.wxss */
.caregory{
  display: flex;
  flex-direction: row;
  height: 100%;
}
.nav_left{
  background: #f8f8f8;
  width: 24%;
  height: 100%;
  white-space: nowrap;
}
.nav_right{
  background: #fff;
  width: 76%;
  height: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.nav_left_items{
  font-size: 28rpx;
  color: #333;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.nav_left_item-active{
  background-color: #fff;
  color: #e93b3d;
}
.fy-category{
  margin: 40rpx 16rpx 0;
}
.fy-category-wrap{
  overflow: hidden;
  padding: 20rpx 20rpx 0;
}
.fy-category .t-right{
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
}

.fy-category .t-right .title{
  font-size: 28rpx;
  height: 60rpx;
  line-height: 30rpx;
  font-weight: 700;
  color: #080808;
  justify-content:flex-end;
}
.fy-category-style{
  width: 32.8%;
  float: right;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.list_img{
  width: 150rpx;
  height: 150rpx;
}
.list_text{
  text-align: center;
  font-size: 24rpx;
  color: #686868;
  margin-top: 10rpx;
  height: 70rpx;
}